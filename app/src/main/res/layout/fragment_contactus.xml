<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="240dp"
            android:layout_marginTop="5dp"

            android:src="@drawable/logo"
            android:elevation="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Master of Computer Applications"
            android:textColor="@color/colorAccent"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Hi!"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="We are ready to help you."
            android:textColor="#000"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp">
            <ImageButton
                android:id="@+id/contact_call"
                android:background="@drawable/contact_btn_shape"
                android:clickable="true"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:src="@drawable/ic_call_black_24dp"
                android:onClick="call"
                android:elevation="10dp"/>
            <TextView
                android:textColor="@color/colorAccent"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:text="Call us" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp">
            <ImageButton
                android:id="@+id/contact_mail"
                android:background="@drawable/contact_btn_shape"
                android:clickable="true"
                android:layout_margin="10dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_email_black_24dp"
                android:onClick="mail"
                android:elevation="10dp"/>
            <TextView android:textColor="@color/colorAccent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send Email" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton android:id="@+id/contact_direction"
                android:background="@drawable/contact_btn_shape"
                android:clickable="true"
                android:layout_width="50dp"
                android:layout_margin="10dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_location_on_black_24dp"
                android:onClick="find"
                android:elevation="10dp"/>
            <TextView
                android:textColor="@color/colorAccent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Find us" />
        </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Follow us on : "
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp">

                <ImageButton
                    android:id="@+id/social_fb"
                    android:layout_margin="10dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="20dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/social_btn_shape"
                    android:clickable="true"
                    android:elevation="5dp"
                    android:onClick="fb"
                    android:scaleType="fitCenter"
                    android:src="@drawable/fb" />

                <ImageButton
                    android:id="@+id/social_wa"
                    android:layout_margin="10dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="20dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/social_btn_shape"
                    android:elevation="5dp"
                    android:onClick="whatsapp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/whatsapp" />

                <ImageButton
                    android:id="@+id/social_youtube"
                    android:layout_width="40dp"
                    android:layout_margin="10dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="20dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/social_btn_shape"
                    android:clickable="true"
                    android:elevation="5dp"
                    android:onClick="play"
                    android:scaleType="centerInside"
                    android:src="@drawable/play" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</FrameLayout>


